{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6", "es7", "dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "rootDirs": ["./src/"],
    "typeRoots": ["./node_modules/@types"],
    "jsx": "react-jsx",
  },
  "include": ["./src/**/*", "./tsconfig.json", "./*", "./svg.d.ts", "./png.d.ts", "./backoffice/index.tsx", "./playground/index.tsx"],
  "exclude": ["node_modules", "dist", "**/__mocks__*", "**/*.spec.**", "test", "assets"]
}